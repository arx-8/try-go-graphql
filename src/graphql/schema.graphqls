# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userID: ID!
}

type User {
  id: ID!
  name: String!
  todos: [Todo!]!
}

type Query {
  todos(userID: ID!): [Todo!]!
  user(id: ID!): User!
}

input NewTodo {
  text: String!
  userId: ID!
}

input NewUser {
  name: String!
}

type Mutation {
  createUser(input: NewUser!): User!
  createTodo(input: NewTodo!): Todo!
}
